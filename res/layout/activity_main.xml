<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/buttons"
        android:id="@+id/title"
        android:text="BB Workout" />

    <Button
        style="@style/buttons"
        android:id="@+id/fullbody"
        android:text="Full Body" />

    <Button
        style="@style/buttons"
        android:id="@+id/push"
        android:text="Push"/>

    <Button
        style="@style/buttons"
        android:id="@+id/pull"
        android:text="Pull"/>

    <Button
        style="@style/buttons"
        android:id="@+id/custom"
        android:text="Custom"/>

    <CheckBox
        style="@style/buttons"
        android:id="@+id/checkBox"
        android:text="Warmup"/>

</LinearLayout>